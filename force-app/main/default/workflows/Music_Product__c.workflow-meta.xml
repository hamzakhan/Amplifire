<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Instructor_Email_Notification</fullName>
        <ccEmails>max.chervinsky@gmail.com</ccEmails>
        <description>Instructor Email Notification</description>
        <protected>false</protected>
        <recipients>
            <recipient>Instructor</recipient>
            <type>role</type>
        </recipients>
        <recipients>
            <recipient>jj@dirtydancer.com</recipient>
            <type>user</type>
        </recipients>
        <recipients>
            <recipient>max.chervinsky@wise-impala-t6x8t2.com</recipient>
            <type>user</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/SalesNewCustomerEmail</template>
    </alerts>
    <alerts>
        <fullName>Tremendous_Music_Product</fullName>
        <ccEmails>max.chervinsky@gmail.com</ccEmails>
        <description>Tremendous Music Product</description>
        <protected>false</protected>
        <recipients>
            <recipient>Manager</recipient>
            <type>role</type>
        </recipients>
        <recipients>
            <recipient>jj@dirtydancer.com</recipient>
            <type>user</type>
        </recipients>
        <recipients>
            <recipient>max.chervinsky@wise-impala-t6x8t2.com</recipient>
            <type>user</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/SalesNewCustomerEmail</template>
    </alerts>
    <fieldUpdates>
        <fullName>Stocking_Product_Note</fullName>
        <field>Needs_Stocking__c</field>
        <literalValue>1</literalValue>
        <name>Stocking Product Note</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <outboundMessages>
        <fullName>Instructor_Instrument_Notifier_Message</fullName>
        <apiVersion>52.0</apiVersion>
        <description>A new Instrument is available in the store!!!!</description>
        <endpointUrl>https://outbound-message.herokuapp.com/obm</endpointUrl>
        <fields>Estimated_Quantity__c</fields>
        <fields>Id</fields>
        <fields>Name</fields>
        <fields>Revature_Music_Store__c</fields>
        <includeSessionId>false</includeSessionId>
        <integrationUser>max.chervinsky@wise-impala-t6x8t2.com</integrationUser>
        <name>Instructor Instrument Notifier Message</name>
        <protected>false</protected>
        <useDeadLetterQueue>false</useDeadLetterQueue>
    </outboundMessages>
    <rules>
        <fullName>Instructor Instrument Notifier</fullName>
        <actions>
            <name>Instructor_Email_Notification</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Music_Product__c.Product_Type__c</field>
            <operation>equals</operation>
            <value>Instrument</value>
        </criteriaItems>
        <description>When a music product record with instrument as the product type is created notify all instructors.</description>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>Stocking Task Creation</fullName>
        <actions>
            <name>Stocking_Product_Note</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>Making a task to stock products when a new Music Product record is created</description>
        <formula>Estimated_Quantity__c &gt; 0</formula>
        <triggerType>onCreateOnly</triggerType>
    </rules>
</Workflow>
